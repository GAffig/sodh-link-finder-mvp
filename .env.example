# Search provider keys (set one or more)
BRAVE_API_KEY=
SERPAPI_KEY=
BING_API_KEY=

# Optional basic auth protection (recommended for private team use)
APP_BASIC_AUTH_USER=
APP_BASIC_AUTH_PASS=

# Optional server port
PORT=3000

# Optional cost controls (defaults shown)
SEARCH_COST_MODE=economy
SEARCH_MAX_PROVIDER_CALLS=4
SEARCH_STANDARD_MAX_PROVIDER_CALLS=8
SEARCH_AUTO_ESCALATE_STANDARD=true
SEARCH_ESCALATE_MIN_RESULTS=8
SEARCH_ESCALATE_MIN_PRIORITY_RESULTS=3
SEARCH_ESCALATE_MIN_DISTINCT_DOMAINS=3
SEARCH_CACHE_BACKEND=auto
SEARCH_CACHE_REDIS_URL=
SEARCH_CACHE_NAMESPACE=sodh:search-cache:v1
SEARCH_CACHE_TTL_MS=604800000
SEARCH_CACHE_MAX_ENTRIES=200
SEARCH_RATE_LIMIT_WINDOW_MS=60000
SEARCH_RATE_LIMIT_MAX_REQUESTS=20
SEARCH_RATE_LIMIT_BLOCK_MS=300000
SEARCH_RATE_LIMIT_MAX_KEYS=10000
SEARCH_MAX_BODY_BYTES=8192
SEARCH_MAX_QUERY_CHARS=180
